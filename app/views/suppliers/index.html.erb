<%#= link_to 'New Supplier', new_supplier_path %>
<div class="container-fluid" id="suppliers">
  <div class="row">
      <div class="col-xs-12">
          <h1>Suppliers</h1>
          <a class="btn btn-success largeBtn" href="/suppliers/new" role="button">Add New Supplier </a>

          <table class="table table-hover">
             <thead>
                  <tr>
                    <th>Name</th>
                    <th>Actions</th>
                  </tr>
             </thead>
            <tbody>
              <% @suppliers.each do |supplier| %>
                <tr>
                  <td><%= supplier.name %></td>
                  <td><%= link_to 'Edit', edit_supplier_path(supplier) %>
                  <%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>
